{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/clients": [
        "src/clients/index"
      ],
      "@/config": [
        "src/config/index"
      ],
      "@/controllers": [
        "src/controllers/index"
      ],
      "@/db/*": [
        "src/db/*"
      ],
      "@/entities": [
        "src/entities/index"
      ],
      "@/interfaces": [
        "src/interfaces/index"
      ],
      "@/log/*": [
        "src/log/*"
      ],
      "@/middlewares": [
        "src/middlewares/index"
      ],
      "@/services": [
        "src/services/index"
      ],
      "@/dto": [
        "src/dto/index"
      ],
      "@/server": [
        "src/server/index"
      ],
    },
  },
}